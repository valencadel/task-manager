<h1>New Task perri!</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :tittle %>
  <%= f.text_field :tittle %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>

<p><%= link_to "Back to Tasks", tasks_path%></p>